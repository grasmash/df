{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">

  {% if page.meta_header %}
  <div class="page__meta_header">
      <div class="{{ meta_header_width }}">
        {{ page.meta_header }}
      </div>
    </div>
  {% endif %}

  {% embed '@one/navbar/navbar.twig' with {
    placement: 'sticky-top',
    container: 'fixed',
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        <div class="mr-auto">
          <div class="navbar-left">
            {{ page.navbar_left }}
           </div>
        </div>
      {% endif %}
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
        <div class="navbar-right">
          {{ page.navbar_right }}
          </div>
      {% endif %}
    {% endblock %}
  {% endembed %}

  {% if page.header %}
    <header class="page__header">
      <div class="{{ header_width }}">
        {{ page.header }}
      </div>
    </header>
  {% endif %}

  <main class="main">
    {% if page.content %}
      {% if page.sidebar_first or page.sidebar_second %}
        {% include '@one/page/sidebar.html.twig' %}
      {% else %}
        <div class="page__content {{ container_class }}">
            {{ page.content }}
        </div>
      {% endif %}
    {% endif %}
  </main>

  {% if page.footer %}
    <footer class="page__footer">
      <div class="{{ footer_width }}">
        <div class="d-flex justify-content-md-between align-items-md-center row">
          {{ page.footer }}
        </div>
      </div>
    </footer>
  {% endif %}
</div>
